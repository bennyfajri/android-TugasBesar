<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailGaji"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/icon_Detail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_monetization_on_black_24dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txt_title_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Gaji"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/icon_Detail"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txt_ID_detail"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID pegawai"
        android:layout_below="@id/txt_title_detail"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/txt_Nama_detail"
        android:layout_marginTop="8sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Pegawai"
        android:layout_below="@id/txt_ID_detail"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/txt_JumlahAnak_detail"
        android:layout_marginTop="8sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumlah anak"
        android:layout_below="@id/txt_Nama_detail"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/txt_gaji_detail"
        android:layout_marginTop="8sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total gaji"
        android:layout_below="@id/txt_JumlahAnak_detail"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manajemenlah keuanganmu sebaik mungkin\n jangan sampai uang yang memanajemenmu"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>